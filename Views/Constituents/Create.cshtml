<div class="max-w-xl mx-auto p-6">
    <h1 class="text-2xl font-semibold mb-4">Add Constituent</h1>

    <form method="post" class="space-y-4">
        <div>
            <label>Type</label>
            <select name="type" class="border rounded px-2 py-1 w-full">
                <option value="Individual">Individual</option>
                <option value="Business">Business</option>
                <option value="Organization">Organization</option>
            </select>
        </div>
        <div>
            <label>Name</label>
            <input type="text" name="name" class="border rounded px-2 py-1 w-full" />
        </div>
        <div>
            <label>Email</label>
            <input type="email" name="email" class="border rounded px-2 py-1 w-full" />
        </div>
        <div>
            <label>Phone</label>
            <input type="text" name="phone" class="border rounded px-2 py-1 w-full" />
        </div>
        <div>
            <label>Address</label>
            <input type="text" name="address" class="border rounded px-2 py-1 w-full" />
        </div>

        <button class="bg-green-600 text-white px-4 py-2 rounded">Save</button>
    </form>
</div>
